@using CodingEventsDemo.Models

@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>


<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>

            <th>
                Name
            </th>

            <th>
                Description
            </th>

            <th>
                Event Location
            </th>

            <th>
                Number of Attendees
            </th>

            <th>
                Contact Email
            </th>
        </tr>

        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
                <td>@evt.Description</td>
                <td>@evt.EventLocation</td>
                <td>@evt.NumOfAttendees</td>
                <td>@evt.ContactEmail</td>
            </tr>
        }

    </table>
}

